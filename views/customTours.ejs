                    <script>
                        // Define the boundaries for the plane to move inside the image
                        document.addEventListener('DOMContentLoaded', function () {
                            const plane = document.getElementById('animatedPlane');
                            const wrapper = plane.parentElement;
                            let width = 0, height = 0;

                            function getRandomPosition() {
                                // Padding so plane doesn't go out of image
                                const padX = 40, padY = 40;
                                const left = Math.random() * (width - padX * 2) + padX;
                                const top = Math.random() * (height - padY * 2) + padY;
                                const rotate = Math.random() * 40 - 20; // -20deg to +20deg
                                return { left, top, rotate };
                            }

                            function animatePlane() {
                                if (!width || !height) {
                                    width = wrapper.offsetWidth;
                                    height = wrapper.offsetHeight;
                                }
                                const { left, top, rotate } = getRandomPosition();
                                plane.style.transition = 'top 2.2s cubic-bezier(.4,1.3,.6,1), left 2.2s cubic-bezier(.4,1.3,.6,1), transform 2.2s';
                                plane.style.left = `${left}px`;
                                plane.style.top = `${top}px`;
                                plane.style.transform = `translate(-50%,-50%) rotate(${rotate}deg)`;
                            }

                            // Set initial position
                            setTimeout(() => {
                                width = wrapper.offsetWidth;
                                height = wrapper.offsetHeight;
                                animatePlane();
                            }, 300);

                            // Animate every 2.5s
                            setInterval(animatePlane, 2500);

                            // Recalculate on resize
                            window.addEventListener('resize', () => {
                                width = wrapper.offsetWidth;
                                height = wrapper.offsetHeight;
                            });
                        });
                    </script>
