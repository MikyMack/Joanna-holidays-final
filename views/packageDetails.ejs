                              message: `
                        Name: ${formData.get('name')}
                        Email: ${formData.get('email')}
                        Phone: ${formData.get('mobile')}
                        Date: ${formData.get('date') || 'N/A'}
                        Adults: ${formData.get('adults')}
                        Children: ${formData.get('children')}
                        Package: ${formData.get('packageName')}
                        Category: ${formData.get('categoryName')}
                        Package ID: ${formData.get('packageId')}
                        Additional Details: ${formData.get('additionalDetails')}
                              `.trim()
                            };
                        
                            // 🔁 Parallel submission
                            const googleSheetPromise = fetch('https://script.google.com/macros/s/AKfycbxwW0I65KndHHnrq16qrLIJryEFhLZU-5rMbhqvqzaBqMfEvvVrI5ghGl3tkVQJ0BNldQ/exec', {
                              method: 'POST',
                              body: googleFormData,
                              redirect: 'follow'
                            });
                        
                            const web3FormsPromise = fetch('https://api.web3forms.com/submit', {
                              method: 'POST',
                              headers: { 'Content-Type': 'application/json' },
                              body: JSON.stringify(web3Data)
                            });
                        
                            const [sheetResponse, web3Response] = await Promise.all([googleSheetPromise, web3FormsPromise]);
                        
                            const sheetResult = await sheetResponse.json();
                            const web3Result = await web3Response.json();
                        
                            if (sheetResult.status === 'success' && web3Result.success) {
                              successMessage.classList.remove('d-none');
                              form.reset();
                            } else {
                              throw new Error('One of the submissions failed.');
                            }
                        
                          } catch (error) {
                            console.error('Submission error:', error);
                            errorMessage.textContent = 'Error: ' + (error.message || 'Failed to submit');
                            errorMessage.classList.remove('d-none');
                          } finally {
                            submitText.textContent = 'Book Now';
                            spinner.classList.add('d-none');
                            submitButton.disabled = false;
                          }
                        });
                        </script>
                        

